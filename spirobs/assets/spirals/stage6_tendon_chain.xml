<mujoco model="stage6_tendon_chain">

    <!-- ===================== -->
    <!--  OPTIONS              -->
    <!-- ===================== -->
    <option timestep="0.002" gravity="0 0 -9.81" integrator="RK4"/>

    <!-- ===================== -->
    <!--  DEFAULTS             -->
    <!-- ===================== -->
    <default>
        <joint
            type="hinge"
            axis="0 1 0"
            damping="0.3"
            limited="true"
            range="-60 60"/>

        <geom
            type="capsule"
            size="0.03"
            density="1000"
            friction="1 0.1 0.1"
            rgba="0.2 0.6 0.9 1"/>

        <site
            size="0.01"
            rgba="1 1 0 1"/>

        <tendon
            stiffness="200"
            damping="5"/>
    </default>

    <!-- ===================== -->
    <!--  WORLD                -->
    <!-- ===================== -->
    <worldbody>

        <geom type="plane" size="5 5 0.1" rgba="0.9 0.9 0.9 1"/>

        <body name="base" pos="0 0 0.1">

            <!-- LINK 1 -->
            <body name="link1" pos="0 0 0">
                <joint name="j1"/>
                <geom fromto="0 0 0  0 0 0.25"/>
                <site name="s1" pos="0.03 0 0.25"/>

                <!-- LINK 2 -->
                <body name="link2" pos="0 0 0.25">
                    <joint name="j2"/>
                    <geom fromto="0 0 0  0 0 0.25"/>
                    <site name="s2" pos="0.03 0 0.25"/>

                    <!-- LINK 3 -->
                    <body name="link3" pos="0 0 0.25">
                        <joint name="j3"/>
                        <geom fromto="0 0 0  0 0 0.25"/>
                        <site name="s3" pos="0.03 0 0.25"/>

                        <!-- LINK 4 -->
                        <body name="link4" pos="0 0 0.25">
                            <joint name="j4"/>
                            <geom fromto="0 0 0  0 0 0.25"/>
                            <site name="s4" pos="0.03 0 0.25"/>

                            <!-- LINK 5 -->
                            <body name="link5" pos="0 0 0.25">
                                <joint name="j5"/>
                                <geom fromto="0 0 0  0 0 0.25"/>
                                <site name="s5" pos="0.03 0 0.25"/>
                            </body>
                        </body>
                    </body>
                </body>
            </body>
        </body>
    </worldbody>

    <!-- ===================== -->
    <!--  TENDON               -->
    <!-- ===================== -->
    <tendon>
        <spatial name="backbone_tendon">
            <site site="s1"/>
            <site site="s2"/>
            <site site="s3"/>
            <site site="s4"/>
            <site site="s5"/>
        </spatial>
    </tendon>

    <!-- ===================== -->
    <!--  ACTUATOR (LENGTH)    -->
    <!-- ===================== -->
    <actuator>
        <position
            name="tendon_length_ctrl"
            tendon="backbone_tendon"
            kp="50"
            ctrllimited="true"
            ctrlrange="-0.1 0.1"/>
    </actuator>

</mujoco>
